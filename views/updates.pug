doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title= title
    link(rel="stylesheet", href="/css/style.css")
  body
    h1= title

    form(action="/update-cobj" method="POST")
      div
        label(for="concert_name") Concert Name:
        input(type="text" name="concert_name" id="concert_name" required)
      div
        label(for="artist") Artist:
        input(type="text" name="artist" id="artist" required)
      div
        label(for="event_date") Event Date:
        input(type="date" name="event_date" id="event_date" required)
      div
        button(type="submit") Add Update

    br
    a(href="/") Return to the homepage